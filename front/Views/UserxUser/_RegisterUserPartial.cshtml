<!-- _RegisterFormPartial.cshtml -->
@model RegisterUserViewModel
@using Auth.Entities

@{
    ViewData["Title"] = "RegisterUser";   
    
}

<div id="userForm" class="card p-3 shadow">
    <h5 class="mb-4">Adicionar Novo Usuário</h5>
    <form method="post" class="form" id="criarForm" asp-controller="UserxUser" asp-action="RegisterUser">

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-group mb-1">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-1">
            <label asp-for="CodigoUnico"></label>
            <input asp-for="CodigoUnico" type="text" class="form-control">
            <span asp-validation-for="CodigoUnico" class="text-danger"></span>
        </div>

        <div class="form-group mb-1">
            <label asp-for="Cpf"></label>
            <input asp-for="Cpf" type="text" class="form-control">
            <span asp-validation-for="Cpf" class="text-danger"></span>
        </div>

        <div class="form-group mb-1">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-1">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" type="text" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>        

        <div class="form-group mb-1">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-1">
            <label asp-for="Funcao" class="control-label">Escolha uma função:</label>
            <select asp-for="Funcao" class="form-control" id="RoleNameAssociaRolesModel">
                <option value="">Selecione uma função</option>
                <option value="@UserRoles.TecnicoGeral">Técnico Geral</option>
                <option value="@UserRoles.Fiscais">Fiscais</option>
                <option value="@UserRoles.Reporter">Reporter</option>
                <option value="@UserRoles.TecnicoHidraulica">Técnico Hidráulica</option>
                <option value="@UserRoles.TecnicoEletrica">Técnico Eletrica</option>
            </select>
            <span asp-validation-for="Funcao" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-primary gap-1 d-flex align-items-center">
            Adicionar Usuário
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5" />
            </svg>
        </button>

    </form>
</div>

@section Scripts {    
    
}