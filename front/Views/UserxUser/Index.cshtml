@model List<front.Models.UserXUserViewModel>
@using Auth.Entities

@{
    ViewData["Title"] = "Index";
    var registerUserModel = new front.Models.RegisterUserViewModel(); 
    var errorModel = new ErrorModalModel();
    var atualiza = new AtualizaOutroUserModel();    
}
    
    

<h1>Index</h1>

<partial name="_ErrorModal" model="errorModel" />


<div class="card-body pt-4 p-3 mb-3">
    <div class="p-3 shadow">
        <div class="row">
            <!-- Paginação -->
            @if (Model != null && Model.Any())
            {
                var currentPage = ViewContext.HttpContext.Request.Query["page"];
                int currentPageNumber = string.IsNullOrEmpty(currentPage) ? 1 : Convert.ToInt32(currentPage);
                int itemsPerPage = 5;  

                <div class="d-flex align-items-center gap-2">
                    <div class="result-info">
                        <p>@((currentPageNumber - 1) * itemsPerPage + 1) - @Math.Min(currentPageNumber * itemsPerPage, Model.First().TotalAchados) of @Model.First().TotalAchados</p>
                    </div>

                    <div class="pagination-container">
                        @if (Model.First().TotalPages > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    @if (currentPageNumber > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new { page = currentPageNumber - 1 })" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                    }

                                    @for (var i = Math.Max(1, currentPageNumber - 1); i <= Math.Min(Model.First().TotalPages, currentPageNumber + 1); i++)
                                    {
                                        <li class="page-item @(i == currentPageNumber ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                        </li>
                                    }

                                    @if (currentPageNumber < Model.First().TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new { page = currentPageNumber + 1 })" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            }

            <div class="col-md-6">
            <!-- Coluna da Lista de Usuários -->
            <partial name="_UserxUserPartial" model="Model"/>       
            </div>
                     

            <!-- Coluna do Formulário -->
            <div class="col-md-3">
                <partial name="_RegisterUserPartial" model="registerUserModel" />
            </div>

            <!-- Coluna do  -->
             <div class="col-md-3">
                <div class="card p-3 shadow">
                    <h5 class="mb-4">Atribuir Funções</h5>
                    <form asp-action="Create" asp-controller="Login" method="post" class="form" id="gherhrh" style="padding: 30px">

                        <div class="mb-3">
                            <label for="id" class="form-label">Codigo Unico:</label>
                            <input type="text" class="form-control" id="nome" name="nome" required>
                        </div>

                        <div class="mb-3">
                            <label for="userRoles">Escolha uma função:</label>
                            <select id="userRoles" name="userRoles">                                
                                <option value="@UserRoles.TecnicoGeral">Técnico Geral</option>
                                <option value="@UserRoles.Fiscais">Fiscais</option>
                                <option value="@UserRoles.Reporter">Reporter</option>
                                <option value="@UserRoles.TecnicoHidraulica">Técnico Hidráulica</option>
                                <option value="@UserRoles.TecnicoEletrica">Técnico Eletrica</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-success gap-1 d-flex align-items-center">
                            Adicionar Função
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-add-fill" viewBox="0 0 16 16">
                                <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 1 1-1 0v-1h-1a.5.5 0 1 1 0-1h1v-1a.5.5 0 0 1 1 0" />
                                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293z" />
                                <path d="m8 3.293 4.712 4.712A4.5 4.5 0 0 0 8.758 15H3.5A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z" />
                            </svg>

                        </button>
                    </form>

                    <button type="button" class="btn btn-success gap-1 d-flex align-items-center" onclick="refreshUserList()">
                        Adicionar Função
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-add-fill" viewBox="0 0 16 16">                            
                        </svg>
                    </button>
                </div>
             </div>



        </div>
    </div>
</div>

@section Scripts {
       @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        function MostraMsgsuccess() {
            var mensagemSucesso = '@TempData["Sucesso"]';
            if (mensagemSucesso !== '') {
                showErrorModal(mensagemSucesso, "Sucesso");
            }
        }

        $(document).ready(function () {
            MostraMsgsuccess();
        });        

        

    </script>
    
}


