@using Auth.Entities;
@model front.Models.AssociaRolesModel;

<h5 class="mb-4">Atribuir Funções</h5>

<form method="post" class="form" id="AssociaRolesform" style="padding: 30px">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group mb-1">
        <label asp-for="CodigoUnico" class="control-label"></label>
        <input asp-for="CodigoUnico" class="form-control" />
        <span asp-validation-for="CodigoUnico" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-1">
        <label asp-for="RoleName" class="control-label">Escolha uma função:</label>
        <select asp-for="RoleName" class="form-control">
            <option value="">Selecione uma função</option>
            <option value="@UserRoles.TecnicoGeral">Técnico Geral</option>
            <option value="@UserRoles.Fiscais">Fiscais</option>
            <option value="@UserRoles.Reporter">Reporter</option>
            <option value="@UserRoles.TecnicoHidraulica">Técnico Hidráulica</option>
            <option value="@UserRoles.TecnicoEletrica">Técnico Eletrica</option>
        </select>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div class="d-flex gap-3">
        <button type="button" class="btn btn-success gap-1 d-flex align-items-center" onclick="AssociaRoles()">
            Adicionar Função
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-add-fill" viewBox="0 0 16 16">
                <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 1 1-1 0v-1h-1a.5.5 0 1 1 0-1h1v-1a.5.5 0 0 1 1 0" />
                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293z" />
                <path d="m8 3.293 4.712 4.712A4.5 4.5 0 0 0 8.758 15H3.5A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z" />
            </svg>

        </button>
        <button type="button" class="btn btn btn-danger  gap-1 d-flex align-items-center" onclick="removerRolesUser()">
            Remover Função
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
            </svg>

        </button>
    </div>
  
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}