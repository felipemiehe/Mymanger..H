<div id="lading-modal" class="modal-window">
    <div>
        <<div class="spinner-border" role="status">
            <span class="visually-hidden">Carregando...</span>
        </div>
        <p class="mt-2">Aguarde, estamos processando...</p>
    </div>
</div>




<style>
    .container_loading_modal {
        display: grid;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .modal-window {
        position: fixed;
        background-color: rgba(255, 255, 255, 0.25);
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 999;
        visibility: hidden;
        opacity: 0;
        pointer-events: none;
        transition: all 0.3s;
    }

        .modal-window.active {
            visibility: visible;
            opacity: 1;
            pointer-events: auto;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-window > div {
            display: flex;
            flex-direction: column;
            align-items: center;
            min-width: 440px;
            position: absolute;
            top: 35%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 2em;
            background: white;            
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }

</style>


<script>
     


    function loadingModal() {
        var loading_modal = document.getElementById('lading-modal');
        if (loading_modal) {
            loading_modal.classList.add('active');
        }
    }

    function closeLoadingModal() {
        var loading_modal = document.getElementById('lading-modal');
        if (loading_modal) {
            loading_modal.classList.remove('active');
        }
    }


</script>