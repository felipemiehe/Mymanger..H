@model front.Models.AtualizaEdificiosModel;




<form method="post" class="form" id="atualizarForm">

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group mb-1">
        <label asp-for="Endereco" class="control-label"></label>
        <input asp-for="Endereco" class="form-control" id="EnderecoAtualizaEdificiosModel" />
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" id="NomeAtualizaEdificiosModel" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>   

    <div class="form-group mb-1">
        <label asp-for="CodigoUnico" class="control-label"></label>
        <input asp-for="CodigoUnico" class="form-control" readonly id="CodigoAtualizaEdificiosMode" />
    </div>

    <button type="button" class="btn btn-outline-primary gap-1 d-flex align-items-center" onclick="AtualizaUsuario();">
        Atualizar Usuário
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
            <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
            <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5" />
        </svg>
    </button>

</form>


@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
