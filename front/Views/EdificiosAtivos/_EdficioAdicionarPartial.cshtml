@model front.Models.AdicionarEdificioModel;




<form method="post" class="form" id="adicionarEdificioForm">

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group mb-1">
        <label asp-for="Endereco" class="control-label"></label>
        <input asp-for="Endereco" class="form-control" id="AdicionarEdificioModel1" />
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" id="AdicionarEdificioModel3" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="CodigoUnico" class="control-label">Codigo Único</label>
        <input asp-for="CodigoUnico" class="form-control" id="AdicionarEdificioModel2" />
        <span asp-validation-for="CodigoUnico" class="text-danger"></span>
    </div> 
    
    <div class="form-group mb-1">
        <label asp-for="NumeroAptos" class="control-label">Numero partições</label>
        <input asp-for="NumeroAptos" class="form-control" id="AdicionarEdificioModel4" />
    </div>

    <div class="form-group mb-1">
        <span asp-validation-for="Responsavel_email" class="text-danger"></span>
        <label asp-for="Responsavel_email" class="control-label">Responsáveis Disponivel:</label>
        <div class="input-group">
            <select asp-for="Responsavel_email" class="form-control" id="ResponsaveisAptosid">
                <option value="">Escolha um Responsável</option>
            </select>
            <button type="button" title="Editar" class="btn btn-secondary" id="redirecionar-btn">
                <i class="bi bi-pencil-square"></i>
            </button>
        </div>        
    </div>



    <button type="button" class="btn btn-success gap-1 d-flex align-items-center" onclick="AdicionarEdificio();">
        Adicionar Edificio
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-add-fill" viewBox="0 0 16 16">
            <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 1 1-1 0v-1h-1a.5.5 0 1 1 0-1h1v-1a.5.5 0 0 1 1 0" />
            <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293z" />
            <path d="m8 3.293 4.712 4.712A4.5 4.5 0 0 0 8.758 15H3.5A1.5 1.5 0 0 1 2 13.5V9.293z" />
        </svg>
    </button>

</form>

